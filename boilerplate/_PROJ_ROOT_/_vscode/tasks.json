{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Aggiorna elementi da boilerplate & m-utilities",
      "type": "shell",
      "command": "cd ${workspaceFolder}/.vscode; . upd-from-boilerplate.sh",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "compila icone",
      "type": "shell",
      "command": "cd ${workspaceFolder:assets} && npm run build_icons",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "focus": true
      },
      "problemMatcher": []
    },
    {
      "label": "npm update",
      "type": "shell",
      "command": "cd ${workspaceFolder:assets}; npm update",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true,
        "focus": true
      },
      "problemMatcher": []
    }
  ]
}
